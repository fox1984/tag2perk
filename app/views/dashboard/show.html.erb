<% content_for :title, "Dashboard" %>

<div class="container mx-auto p-4">
  <div class="my-8">
    <h1 class="mb-6">Tag2Perk Dashboard</h1>

    <!-- Instagram Connection Status -->
    <div class="p-6 bg-white rounded-lg border border-gray-200 dark:bg-gray-900 dark:border-gray-700 mb-6">
      <h2 class="h4 mb-4">Instagram Connection</h2>
      
      <% if @accounts.instagram_user_id.present? %>
        <div class="flex items-center text-green-600 mb-2">
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span>Connected as @<%= @accounts.instagram_username %></span>
        </div>
        <p class="text-sm text-gray-600 dark:text-gray-400">Your Instagram Business account is connected.</p>

      <% else %>
        <p class="text-gray-600 dark:text-gray-400 mb-4">Connect your Instagram Business account to start receiving tagged posts.</p>
        <%= button_to "Connect Instagram", user_facebook_omniauth_authorize_path, method: :post, data: { turbo: false }, class: "btn btn-primary" %>
      <% end %>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
      <div class="p-6 bg-white rounded-lg border border-gray-200 dark:bg-gray-900 dark:border-gray-700">
        <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">Total Tags</h3>
        <p class="text-3xl font-bold"><%= @stream_posts.count %></p>
      </div>
      
      <div class="p-6 bg-white rounded-lg border border-gray-200 dark:bg-gray-900 dark:border-gray-700">
        <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">Pending</h3>
        <p class="text-3xl font-bold text-orange-600"><%= @pending_count %></p>
      </div>
      
      <div class="p-6 bg-white rounded-lg border border-gray-200 dark:bg-gray-900 dark:border-gray-700">
        <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">Approved</h3>
        <p class="text-3xl font-bold text-green-600"><%= @stream_posts.where(approved: true).count %></p>
      </div>
    </div>

    <!-- Tagged Posts -->
    <div class="p-6 bg-white rounded-lg border border-gray-200 dark:bg-gray-900 dark:border-gray-700">
      <h2 class="h4 mb-6">Recent Tagged Posts</h2>
      
      <% if @stream_posts.any? %>
        <div class="space-y-6">
          <% @stream_posts.each do |post| %>
            <div class="flex gap-4 pb-6 border-b border-gray-200 dark:border-gray-700 last:border-0">
              <% if post.media_url.present? %>
                <img src="<%= post.media_url %>" class="w-24 h-24 object-cover rounded-lg flex-shrink-0">
              <% end %>
              
              <div class="flex-1 min-w-0">
                <div class="flex items-start justify-between mb-2">
                  <p class="font-semibold">@<%= post.username %></p>
                  <span class="text-sm text-gray-500"><%= time_ago_in_words(post.timestamp) %> ago</span>
                </div>
                
                <% if post.caption.present? %>
                  <p class="text-sm text-gray-600 dark:text-gray-400 mb-3"><%= post.caption.truncate(120) %></p>
                <% end %>
                
                <div class="flex flex-wrap items-center gap-2">
                  <%= link_to "View Post", post.permalink, target: "_blank", class: "text-sm text-blue-600 hover:text-blue-800" %>
                  
                  <% if post.approved? %>
                    <span class="badge badge-success">Approved</span>
                    <%= button_to "Hide", hide_stream_post_path(post), method: :patch, class: "btn btn-xs btn-secondary" %>
                  <% else %>
                    <%= button_to "Approve", approve_stream_post_path(post), method: :patch, class: "btn btn-xs btn-primary" %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12 text-gray-500">
          <p>No tagged posts yet.</p>
          <p class="text-sm mt-2">When customers tag you on Instagram, they'll appear here.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>